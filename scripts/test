#!/bin/sh

export PREFIX=""
if [ -d 'venv' ] ; then
  if [ $OSTYPE == "msys" ] || [ $OSTYPE == "cygwin" ]; then
    export PREFIX="venv/Scripts/"
  else
    export PREFIX="venv/bin/"
  fi
fi

set -ex

if [ -z $GITHUB_ACTIONS ]; then
    scripts/check
fi

${PREFIX}pytest $@

if [ -z $GITHUB_ACTIONS ]; then
    scripts/coverage
fi
